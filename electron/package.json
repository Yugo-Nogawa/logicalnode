{
  "name": "logical-node-3-electron",
  "version": "1.0.0",
  "description": "Logical Node 3 - Electron Edition (Desktop)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-packager . \"Logical Node 3\" --platform=win32 --arch=x64 --out=dist --overwrite --icon=assets/icons/icon.png"
  },
  "keywords": [
    "logical-node",
    "logic-tree",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.logicalnode3.app",
    "productName": "Logical Node 3",
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable",
      "icon": "assets/icons/icon.png",
      "verifyUpdateCodeSignature": false,
      "signDlls": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon.png",
      "category": "Utility"
    }
  }
}
